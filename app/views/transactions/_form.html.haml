.form-btn
  = form_for @transaction, html: {role: 'form', class: 'form-inline', remote: true} do |f|
    - if @transaction.errors.any?
      #error_explanation
        %h2
          = pluralize(@transaction.errors.count, "error")
          prohibited this bill from being saved:
        %ul
          - @transaction.errors.full_messages.each do |message|
            %li= message
    .form-group
      = f.label :date, 'New Transaction'
    .form-group
      = f.date_field :date, value: Date.current, placeholder: '(YYYY-MM-DD)', class: 'form-control', required: true
    .form-group
      = f.text_field :summary, class: 'form-control', required: true, placeholder: 'Transaction title'
    .form-group
      = f.text_field :amount, class: 'form-control', required: true, placeholder: 'Transaction amount'
    .form-group
      %button.btn.btn-success.btn-md.btn-group{:type => "submit"} Create
