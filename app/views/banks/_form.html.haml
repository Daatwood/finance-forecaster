= form_for @bank do |f|
  - if @bank.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bank.errors.count, "error")} prohibited this bank from being saved:"
      %ul
        - @bank.errors.full_messages.each do |msg|
          %li= msg

  = f.label :name
  = f.text_field :name
  = f.label :balance
  = f.text_field :balance
  .actions
    = f.submit 'Save'
