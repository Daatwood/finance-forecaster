.row
  .col-md-12.well
    = form_for @bank, html: {role: 'form', class: 'form-inline', remote: true} do |f|
      - if @bank.errors.any?
        #error_explanation
          %h2
            = pluralize(@bank.errors.count, "error")
            prohibited this bank from being saved:
          %ul
            - @bank.errors.full_messages.each do |message|
              %li= message
      - color = "##{"%06x" % (rand * 0xffffff)}"
      .form-group
        = f.label :name, class: 'sr-only'
        = f.text_field :name, placeholder: 'Name', class: 'form-control'
      .form-group
        = f.label :balance, class: 'sr-only'
        = f.text_field :balance, placeholder: 'Starting Balance', class: 'form-control'
      .form-group
        = f.label :color, class: 'sr-only'
        = f.text_field :color, value: color, class: 'minicolors form-control', :style => "height:34px;"
      .form-group
        %button.btn.btn-primary.btn-md.btn-group{:type => "submit"} Create