%section
  .container.visitor-section
    .row.text-center
      %h1 Forgot your password?
      %hr.colored
    .row
      .col-md-offset-4.col-md-4
        = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { method: :post, :role => 'form'}) do |f|
          = devise_error_messages!
          .form-group.float-label-control
            = f.label :email
            = f.email_field :email, autofocus: true, class:'form-control', placeholder: 'Email Address'
          %button.btn.btn-primary.btn-block{:type => "submit"} Send reset password instructions
          = render "devise/shared/links"