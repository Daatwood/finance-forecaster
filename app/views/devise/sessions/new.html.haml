%section
  .container.visitor-section
    .row.text-center
      %h1 Login
      %hr.colored
    .row
      .col-md-offset-4.col-md-4
        = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
          = devise_error_messages!(resource)
          .form-group.float-label-control
            = f.label :email
            = f.email_field :email, autofocus: true, class:'form-control', placeholder: 'Email Address', required: true
          .form-group.float-label-control
            = f.label :password
            = f.password_field :password, autocomplete: false, class:'form-control', placeholder: 'Password', required: true
          - if devise_mapping.rememberable?
            .form-group.float-label-control
              = f.check_box :remember_me
              = f.label :remember_me
          .row
            .col
              %button.btn.btn-success.btn-block{:type => "submit"} Login
              %br
              = link_to "Forgot your password?", new_password_path(:user), class: 'text-info'
              %br
              = link_to "No account? Sign up!", new_registration_path(:user), class: 'text-info'
