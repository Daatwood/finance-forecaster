!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Finance Forecaster'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Finance Forecaster'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header#navbar-main{style: "background-color:#000;"}
      = render 'layouts/navigation'
    %main#wrap{:role => "main"}
      .row{style: "margin-top:6em;"}
        .col-md-12{style: "background-color:#f6f6f6;"}
          .container
            = render 'layouts/messages'
          = yield
    #footer{style: "background-color:#000;"}
      = render 'layouts/footer'
