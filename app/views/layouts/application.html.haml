!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Finance Forecaster"
    %meta{:content => content_for?(:description) ? yield(:description) : "Finance Forecaster", :name => "description"}/
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header= render 'layouts/navigation'
    %main{:role => "main"}
      #wrapper.active
        - if user_signed_in?
          #sidebar-wrapper.hidden-xs
            %ul#sidebar_menu.sidebar-nav
              %li.sidebar-brand= link_to 'Dashboard', dashboard_path
            %ul#sidebar.sidebar-nav= render 'layouts/side_navigation_links'
        #page-content-wrapper
          .page-content-wrapper
            .page-content.inset
              .row
                .col-md-12.col-sm-12
                  = render 'layouts/messages'
                  = yield