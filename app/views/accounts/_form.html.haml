.form-btn
  = form_for @account, html: {role: 'form', class: 'form-inline', remote: true} do |f|
    - if @account.errors.any?
      #error_explanation
        %h2
          = pluralize(@account.errors.count, "error")
          prohibited this account from being saved:
        %ul
          - @account.errors.full_messages.each do |message|
            %li= message
    - color = "##{"%06x" % (rand * 0xffffff)}"
    .form-group
      = f.label :name, class: 'sr-only'
      = f.text_field :name, placeholder: 'Name', class: 'form-control'
    .form-group
      = f.label :website, class: 'sr-only'
      = f.text_field :website, placeholder: 'Website', class: 'form-control'
    .form-group
      = f.label :color, class: 'sr-only'
      = f.text_field :color, value: color, class: 'minicolors form-control', :style => "height:34px;"
    .form-group
      %button.btn.btn-primary.btn-md.btn-group{:type => "submit"} Create
